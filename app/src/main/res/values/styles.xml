<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorSpotifyDark</item>
        <item name="colorPrimaryVariant">@color/colorSpotifyDark</item>
        <item name="android:colorBackground">@color/colorSpotifyDark</item>
        <item name="android:textColor">@color/colorDarkGreen</item>


    </style>

    <style name="MyButton" parent="Widget.MaterialComponents.Button">
        <item name="colorPrimary">@color/colorDarkGreen</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="shapeAppearance">@id/rectangles</item>
        <item name="cornerSize">90%</item>
    </style>

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">

        <item name="colorAccent">@color/colorDarkGreen</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textAppearanceSmall">@style/Widget.MaterialComponents.Tooltip</item>
    </style>

    <style name="MyCustomTextView" parent="Widget.MaterialComponents.TextView">

        <item name="shapeAppearance">@id/rectangles</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>
</resources>